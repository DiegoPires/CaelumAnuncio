<h1>Cadastro de anuncio</h1>

<p><%= notice %></p>
<p><%= alert %></p>

<% if user_signed_in? %>
  <%= render partial: "anuncios/form" %>
<% end %>

<br><br>

<table width="550" border=1>
  <tr>
    <th>Modelo</th>
    <th>Ano</th>
    <th>Valor</th>
    <th>Descricao</th>
    <% if user_signed_in? %>
      <td></th>
    <% end %>
  </tr>
  <% @anuncios.each do |a| %>
    <tr>
      <td><%= a.modelo %></td>
      <td><%= a.ano %></td>
      <td><%= a.valor %></td>
      <td><%= a.descricao %></td>
      <% if user_signed_in? %>
        <td><%= link_to "Editar", edit_anuncio_path(a) %> | 
            <%= link_to "Excluir", delete_anuncio_path(a), method: :delete, data: { confirm: "Mesmo?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
